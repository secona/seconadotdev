---
import { getCollection, getEntry, render } from "astro:content";
import NavbarLayout from "../../layouts/NavbarLayout.astro";
import Card from "../../components/Card.astro";

export async function getStaticPaths() {
  const blogs = await getCollection("blogs");
  return blogs
    .filter(blog => blog.data.show)
    .map(blog => ({ params: { slug: blog.id } }))
}

const { slug } = Astro.params;
const entry = await getEntry('blogs', slug);

if (!entry || !entry.data.show) throw new Error("blog not found");

const { Content } = await render(entry);
---

<NavbarLayout pageTitle={entry.data.title + " | Vito Secona"}>
  <main class="blog-main">
    <a class="blog-back" href="/blog">Back to blogs</a>
    <Card disableTitlebar>
      <div class="title-card">
        <h1 class="blog-title">{entry.data.title}</h1>
        <div class="blog-meta">
          <time class="blog-date">
            {new Date(entry.data.publishedAt).toLocaleDateString("en-US", {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {entry.data.tags && entry.data.tags.length > 0 && (
            <div class="tags">
              {entry.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </Card>
    <Card disableTitlebar>
      <article class="blog-content">
        <Content />
      </article>
    </Card>
  </main>
</NavbarLayout>

<style lang="scss" is:global>
@use '../../styles/mixins' as *;

:root {
  --gray-50: rgb(249 250 251);
  --gray-100: rgb(243 244 246);
  --gray-200: rgb(229 231 235);
  --gray-600: rgb(75 85 99);
  --gray-700: rgb(55 65 81);
  --blue-50: rgb(239 246 255);
  --yellow-50: rgb(254 252 232);
  --red-600: rgb(220 38 38);
  --blue-600: rgb(37 99 235); 
  --orange-400: rgb(251 146 60); 
  --yellow-300: rgb(253 230 138); 
}

.blog-back {
  color: var(--blue-600);
  text-decoration: underline;
}

.blog-main {
  max-width: 1280px;
  padding: 6rem 1.5rem;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.title-card {
  padding: 0.5rem 0; 
  display: flex;
  flex-direction: column;
  align-items: flex-start; 
}

.blog-title {
  @include font-size(4xl);
  margin-bottom: 0.75rem; 
  color: var(--gray-900);
  line-height: 1.2; 
}

.blog-description {
  color: var(--gray-700); 
  margin-bottom: 1.5rem; 
}

.blog-meta {
  display: flex;
  flex-wrap: wrap; 
  gap: 1rem; 
  align-items: center; 
}

.blog-date {
  @include font-size(sm);
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;

  .tag {
    @include font-size(sm);
    border: 2px solid black;
    border-radius: var(--rounded);
    padding: 0.25rem 0.5rem;
    background-color: var(--yellow-300);
    font-weight: 500;
  }
}

.blog-content {
  line-height: 1.7;
  
  h1 {
    @include font-size(3xl);
    margin: 2rem 0 1rem 0;
    color: var(--gray-900);
    border-bottom: 2px solid var(--gray-400);
    padding-bottom: 0.5rem;
    font-family: "IBM Plex Mono", sans-serif;
    font-weight: 600;
  }

  h2 {
    @include font-size(2xl);
    margin: 1.75rem 0 0.75rem 0;
    color: var(--gray-900);
    font-family: "IBM Plex Mono", sans-serif;
    font-weight: 600;
  }

  h3 {
    @include font-size(xl);
    margin: 1.5rem 0 0.5rem 0;
    color: var(--gray-900);
    font-family: "IBM Plex Mono", sans-serif;
    font-weight: 600;
  }

  h4 {
    @include font-size(lg);
    margin: 1.25rem 0 0.5rem 0;
    color: var(--gray-900);
    font-family: "IBM Plex Mono", sans-serif;
    font-weight: 600;
  }

  h5 {
    @include font-size(base);
    margin: 1rem 0 0.25rem 0;
    color: var(--gray-900);
    font-family: "IBM Plex Mono", sans-serif;
    font-weight: 600;
  }

  h6 {
    @include font-size(sm);
    margin: 0.75rem 0 0.25rem 0;
    color: var(--gray-500);
    font-family: "IBM Plex Mono", sans-serif;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  
  p {
    margin: 1rem 0;
    color: var(--gray-900);
    font-family: "Roboto Mono", sans-serif;
  }

  
  strong {
    font-weight: 700;
    color: var(--gray-900);
  }

  em {
    font-style: italic;
  }

  
  blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    background-color: var(--blue-300);
    border: 2px solid black;
    border-radius: var(--rounded);
    box-shadow: var(--hard-shadow);
    
    p {
      margin: 0.5rem 0;
      color: var(--gray-900);
      font-style: italic;
      font-family: "Roboto Mono", sans-serif;
    }

    
    blockquote {
      margin: 0.75rem 0;
      padding: 0.75rem 1rem;
      background-color: var(--yellow-300);
      border: 2px solid black;
      border-radius: var(--rounded);
      box-shadow: var(--hard-shadow);
      
      p {
        color: var(--gray-900);
        @include font-size(sm);
      }
    }
  }

  
  ul, ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
    
    li {
      margin: 0.5rem 0;
      color: var(--gray-900);
      font-family: "Roboto Mono", sans-serif;
      
      
      ul, ol {
        margin: 0.25rem 0;
      }
    }
  }

  ul {
    list-style-type: disc;
    
    ul {
      list-style-type: circle;
      
      ul {
        list-style-type: square;
      }
    }
  }

  ol {
    list-style-type: decimal;
    
    ol {
      list-style-type: lower-alpha;
      
      ol {
        list-style-type: lower-roman;
      }
    }
  }

  
  code:not(pre code) {
    background-color: var(--orange-400);
    color: var(--gray-900);
    padding: 0.125rem 0.375rem;
    border-radius: var(--rounded);
    font-family: 'Roboto Mono', monospace;
    @include font-size(sm);
    font-weight: 500;
    border: 2px solid black;
  }

  
  pre {
    margin: 1.5rem 0;
    padding: 1.5rem;
    background-color: var(--gray-900);
    border-radius: var(--rounded);
    overflow-x: auto;
    border: 2px solid black;
    box-shadow: var(--hard-shadow);
    
    code {
      background: none;
      padding: 0;
      border: none;
      color: white;
      font-family: 'Roboto Mono', monospace;
      @include font-size(sm);
      line-height: 1.5;
      
      
      .token.comment,
      .token.prolog,
      .token.doctype,
      .token.cdata {
        color: var(--gray-400);
        font-style: italic;
      }
      
      .token.punctuation {
        color: var(--gray-400);
      }
      
      .token.property,
      .token.tag,
      .token.constant,
      .token.symbol,
      .token.deleted {
        color: #ff6b6b;
      }
      
      .token.boolean,
      .token.number {
        color: var(--yellow-300);
      }
      
      .token.selector,
      .token.attr-name,
      .token.string,
      .token.char,
      .token.builtin,
      .token.inserted {
        color: #51cf66;
      }
      
      .token.operator,
      .token.entity,
      .token.url,
      .language-css .token.string,
      .style .token.string,
      .token.variable {
        color: var(--blue-300);
      }
      
      .token.atrule,
      .token.attr-value,
      .token.function,
      .token.class-name {
        color: #da77f2;
      }
      
      .token.keyword {
        color: var(--orange-400);
        font-weight: 600;
      }
      
      .token.regex,
      .token.important {
        color: var(--yellow-300);
      }
    }
  }

  
  hr {
    margin: 2rem 0;
    border: none;
    height: 2px;
    background-color: black;
    border-radius: 1px;
  }

  
  a {
    color: var(--blue-600);
    text-decoration: none;
    
    &:hover {
      text-decoration: underline;
    }
  }

  
  table {
    width: 100%;
    margin: 1.5rem 0;
    border-collapse: separate;
    border-spacing: 0;
    border: 2px solid black;
    border-radius: var(--rounded);
    overflow: hidden;
    box-shadow: var(--hard-shadow);
    
    th, td {
      padding: 0.75rem 1rem;
      text-align: left;
      border-bottom: 2px solid black;
      font-family: "Roboto Mono", sans-serif;
    }
    
    th {
      background-color: var(--orange-400);
      font-weight: 600;
      color: var(--gray-900);
      font-family: "IBM Plex Mono", sans-serif;
    }
    
    td {
      background-color: white;
    }
    
    tr:last-child td {
      border-bottom: none;
    }
  }
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;

  .tag {
    @include font-size(sm);
    border: 2px solid black;
    border-radius: var(--rounded);
    padding: 0.25rem 0.5rem;
    background-color: var(--yellow-300);
    font-weight: 500;
  }
}
</style>
