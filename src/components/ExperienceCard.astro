---
interface Props {
  title: string;
  at: string;
  time: string;
  description: string[];
}

const { title, at, time, description } = Astro.props;
---

<div class="bg-white border-2 border-black rounded-lg shadow-hard px-6 py-2">
  <p class="text-gray-400 text-sm">{time}</p>
  <h1>{title} @ {at}</h1>
  <ul class="list-disc list-inside">
    {description.map((des) => <li>{des}</li>)}
  </ul>
</div>
